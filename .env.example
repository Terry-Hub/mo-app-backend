# Port du serveur
PORT=5000

# Connexion MongoDB (exemple en local)
MONGO_URI=mongodb://localhost:27017/mo-app-expo

# Clés JWT (à changer impérativement en prod)
JWT_SECRET=change_me_with_a_strong_secret
JWT_REFRESH_SECRET=change_me_with_another_strong_secret

# Clé Stripe secrète (mode test au début)
STRIPE_SECRET_KEY=sk_test_votre_cle_stripe_ici

# Compte email utilisé pour l'envoi d'OTP (si tu actives l'OTP par email)
EMAIL_USER=votre_adresse_email
EMAIL_PASS=votre_mot_de_passe_ou_app_password

# (Optionnel) Service account Firebase Admin, au format JSON stringifié
# FIREBASE_SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"..."}'

# (Optionnel) Twilio si tu veux envoyer l'OTP par SMS plus tard
TWILIO_ACCOUNT_SID=votre_account_sid
TWILIO_AUTH_TOKEN=votre_auth_token
TWILIO_PHONE_NUMBER=+33123456789
